<MatDialogTitle>
    Join room
</MatDialogTitle>
<MatDialogContent>
    <MatTextField FullWidth="true" @bind-Value="@_roomDisplayName" Id="name" Required="true" Label="Display Name"></MatTextField>
</MatDialogContent>
<MatDialogActions>
    <MatButton OnClick="@(_ => CloseDialog())">Join</MatButton>
</MatDialogActions>

@code {

    [CascadingParameter]
    public MatDialogReference? DialogReference { get; set; }

    private string _roomDisplayName = string.Empty;

    private void CloseDialog()
    {
        if (!string.IsNullOrEmpty(_roomDisplayName))
        {
            DialogReference?.Close(_roomDisplayName);
        }
    }

}